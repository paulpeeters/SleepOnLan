{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "UdpService": {
    "Port": 9,
    "MacAddresses": [],
    "ThrottleTimeInSeconds": 5,
    "MacAddressesRefreshTimeInMinutes": 60
  },
  "SleepService": {
    "Enabled":  true
  },
  "Commands": {
    "Windows": {
      "Command": "C:\\Windows\\System32\\rundll32.exe",
      "Arguments": "powrprof.dll,SetSuspendState 0,1,1"
    },
    "Linux": {
      "Command": "systemctl",
      "Arguments": "suspend"
    },
    "OSX": {
      "Command": "shutdown",
      "Arguments": "-s now"
    }
  }
}
